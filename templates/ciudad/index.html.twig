            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Provincia</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ciudad in ciudads %}
            <tr>
                <td>{{ ciudad.id }}</td>
                <td>{{ ciudad.descripcion }}</td>
                <td>{{ ciudad.provincia }}</td>
                <td>
